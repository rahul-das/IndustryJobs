<h1>Interview Invitations</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Candidate Name</th>
      <th scope="col">Job Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.date.strftime("%B %d %Y") %></td>
        <td><%= interview.time.strftime("%I:%M%p") %></td>
        <td><%= interview.job_application.candidate.name %></td>
        <td><%= interview.job_application.job.title %></td>
        <td><%= link_to 'Show', interview, class: "btn btn-info" %></td>
        <!-- <td><%#= link_to 'Edit', edit_interview_path(interview) %></td>
        <td><%#= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

