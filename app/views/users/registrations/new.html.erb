<div class="page-header" style="padding-top: 20px;">
  <h2>Job Poster Sign up</h2>
</div>
<%# resource.build_company %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {style: "width: 100%;max-width: 330px;padding: 15px;margin: auto;"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, class: "sr-only" %><br />
    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "sr-only" %><br />
    <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :organisation_name, class: "sr-only" %><br />
    <%= f.collection_select :company_id, Company.all, :id, :name, {prompt: 'Select Organisation'}, {class: "form-control"} %>
  </div>


  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password ( #{@minimum_password_length if @minimum_password_length} characters minimum)", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %>
  </div>
<br />
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
