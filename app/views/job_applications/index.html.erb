<h1>Job Applications</h1>

<table>
  <thead>
    <tr>
      <th>Candidate</th>
      <th>Job</th>
      <th>Status</th>
      <th>Response Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_applications.each do |job_application| %>
      <tr>
        <td><%= job_application.candidate.name %></td>
        <td><%= job_application.job.title %></td>
        <td><%= job_application.status %></td>
        <td><%= job_application.response_status %></td>
        <td><%= link_to 'Invite for Interview', new_interview_path(job_application_id: job_application) %></td>
        <!-- <td><%#= link_to 'Edit', edit_job_application_path(job_application) %></td>
        <td><%#= link_to 'Destroy', job_application, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
